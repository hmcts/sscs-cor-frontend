#!groovy

properties([
        pipelineTriggers([cron('00 21 * * *')]),
        parameters([
                string(name: 'URL_TO_TEST', defaultValue: 'https://sscs-cor-frontend-aat.service.core-compute-aat.internal', description: 'The URL you want to run these tests against'),
        ])
])

@Library("Infrastructure")

def product = "sscs-cor"
def component = "frontend"

withNightlyPipeline("nodejs", product, component) {
    env.TEST_URL = params.URL_TO_TEST

    enableCrossBrowserTest()
    enableSlackNotifications('#sscs-tech')
}