{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
	"resolveJsonModule": true,
    "allowJs": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./app/server/models/express-session"
    ],
    "lib": ["dom", "es7", "es2020"],
    "forceConsistentCasingInFileNames": false
  },
  "exclude": ["dist"]
}
