    "module": "commonjs",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
	"resolveJsonModule": true,
    "allowJs": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    },
    "lib": ["dom", "es7", "es2020"]
  },
  "exclude": ["dist"]
}
