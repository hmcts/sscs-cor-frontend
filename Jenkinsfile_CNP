#!groovy
properties(
        [[$class: 'GithubProjectProperty', projectUrlStr: 'https://github.com/hmcts/sscs-cor-frontend'],
         pipelineTriggers([[$class: 'GitHubPushTrigger']])]
)

@Library("Infrastructure")

def product = "sscs-cor"
def component = "frontend"

def cohUrlAat = "http://coh-cor-aat.service.core-compute-aat.internal"

withPipeline("nodejs", product, component) {
    after('build') {sh 'yarn build'}
    before("smoketest:preview") {sh 'export ' + cohUrlAat}
    before("functionaltest:preview") {sh 'export ' + cohUrlAat}
    before("smoketest:aat") {sh 'export ' + cohUrlAat}
    before("functionaltest:aat") {sh 'export ' + cohUrlAat}
    before("smokeTest:aat") {sh 'export ' + cohUrlAat}
}
