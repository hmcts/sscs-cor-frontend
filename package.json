{
  "name": "sscs-cor-frontend",
  "description": "Continuous Online Resolution",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=8.9.0 <9.0"
  },
  "scripts": {
    "start": "cross-env NODE_PATH=. node server.js",
    "dev": "yarn build:dev && NODE_PATH=. TS_NODE_PROJECT=app/server/tsconfig.json NODE_ENV=development nodemon",
    "dev-mock-api": "concurrently \"yarn dev\" \"yarn mock-api\"",
    "mock-api": "dyson test/mock/services/ 8080",
    "build": "yarn build:dev && yarn transpile",
    "build:dev": "yarn build-sass && yarn build-js && yarn copy-assets",
    "build-sass": "node-sass app/client/sass/application.scss public/css/main.css --output-style compressed",
    "copy-assets": "cp -R ./node_modules/govuk-frontend/assets ./public/govuk-frontend",
    "build-js": "browserify ./app/client/javascript/main.ts -p [ tsify -p app/client --noImplicitAny ] -o ./public/js/main.js",
    "test": "yarn test:unit && yarn test:integration && yarn test:browser",
    "test:unit": "cross-env NODE_PATH=. TS_NODE_PROJECT=app/server/tsconfig.json NODE_ENV=test mocha test/unit/**/*.ts",
    "test:browser": "cross-env NODE_PATH=. TS_NODE_PROJECT=app/server/tsconfig.json NODE_ENV=test mocha test/browser/**/*.ts",
    "test:integration": "cross-env NODE_PATH=. TS_NODE_PROJECT=app/server/tsconfig.json NODE_ENV=test mocha test/integration/**/*.ts",
    "test:functional": "yarn test:browser -g @smoke --invert",
    "test:smoke": "yarn test:browser -g @smoke",
    "test:coverage": "yarn transpile && nyc yarn test:unit",
    "test:a11y": "cross-env NODE_PATH=. LOG_LEVEL=OFF mocha test/accessibility/**/*.ts",
    "test:all": "yarn test && yarn test:a11y",
    "test:nsp": "nsp check",
    "sonar-scan": "sonar-scanner",
    "lint": "eslint .",
    "transpile": "yarn tsc -p ./app/server/tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hmcts/sscs-cor-frontend.git"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/nodejs-healthcheck": "^1.4.6",
    "@hmcts/nodejs-logging": "^3.0.0",
    "@types/express": "^4.16.0",
    "applicationinsights": "^1.0.1",
    "body-parser": "^1.17.1",
    "config": "^1.30.0",
    "connect-redis": "^3.3.3",
    "cross-env": "^4.0.0",
    "express": "^4.15.2",
    "express-session": "^1.15.6",
    "govuk-frontend": "^1.2.0",
    "http-status-codes": "^1.3.0",
    "joi": "^13.5.2",
    "jquery": "^3.3.1",
    "lodash": "^4.17.10",
    "moment": "^2.18.1",
    "node-sass": "4.5.3",
    "nsp": "^3.2.1",
    "nunjucks": "^3.0.0",
    "serve-favicon": "^2.4.2",
    "superagent": "^3.8.3"
  },
  "devDependencies": {
    "@hmcts/eslint-config": "^1.4.0",
    "@types/chai": "^4.1.4",
    "@types/jquery": "^3.3.6",
    "@types/mocha": "^5.2.5",
    "@types/node": "^9.4.6",
    "@types/nunjucks": "^3.1.0",
    "browserify": "^16.2.2",
    "chai": "^3.5.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^3.0.0",
    "concurrently": "^3.6.1",
    "dyson": "^2.0.1",
    "eslint": "^4.19.1",
    "faker": "^4.1.0",
    "istanbul": "1.1.0-alpha.1",
    "jsdom": "^11.12.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^3.2.0",
    "mocha-jenkins-reporter": "^0.3.8",
    "nock": "^9.4.4",
    "nodemon": "^1.18.3",
    "nyc": "^13.0.1",
    "pa11y": "^4.9.0",
    "pre-commit": "^1.2.2",
    "puppeteer": "^1.6.1",
    "request-promise": "^4.2.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sonar-scanner": "^3.0.3",
    "source-map-support": "^0.5.9",
    "supertest": "^3.1.0",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tsify": "^4.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.0.0",
    "uuid": "^3.3.2"
  }
}
