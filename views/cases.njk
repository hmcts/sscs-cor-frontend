{% extends "layout.njk" %}
{% set pageHeader = content[i18n.language].selectCase.title %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% block corContent %}
  <h1 class="govuk-heading-xl">{{ content[i18n.language].selectCase[ibcaPrefix + 'heading'] }}</h1>
  {% for name, row in casesByNameAndRow %}
    {{ govukTable({
      caption: name,
      captionClasses: "govuk-heading-m",
      firstCellIsHeader: false,
      head: [
        { text: content[i18n.language].selectCase.appealReference },
        { text: content[i18n.language].selectCase[ibcaPrefix + 'benefit'] },
        { text: content[i18n.language].selectCase.dateSubmitted },
        { text: content[i18n.language].selectCase[ibcaPrefix + 'mrnDate'] },
        { text: content[i18n.language].selectCase.action | safe }
      ],
      rows: row
    }) }}
  {% endfor %}
{% endblock corContent %}
