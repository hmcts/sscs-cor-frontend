{% extends "layout.njk" %}
{% set pageHeader = content[i18n.language].selectCase.title | safe %}
{% from "govuk/components/table/macro.njk" import govukTable %}
{% block corContent %}
  <h1 class="govuk-heading-xl">{{ content[i18n.language].selectCase.heading | safe }}</h1>
  {% for name, row in casesByNameAndRow %}
    {{ govukTable({
      caption: name | safe,
      captionClasses: "govuk-heading-m",
      firstCellIsHeader: false,
      head: [
        { text: content[i18n.language].selectCase.appealReference | safe },
        { text: content[i18n.language].selectCase.benefit | safe },
        { text: content[i18n.language].selectCase.dateSubmitted | safe },
        { text: content[i18n.language].selectCase.mrnDate | safe },
        { text: content[i18n.language].selectCase.action | safe }
      ],
      rows: row
    }) }}
  {% endfor %}
{% endblock corContent %}
