{% macro navigationMainTabs(active) %}
<div class="govuk-tabs" data-module="govuk-tabs">
  <nav class="navigation-tabs">
    <ul class="govuk-tabs__list">
      {% for tab in mainTabs %}
      <li
        class="govuk-tabs__list-item{% if tab.id == active %} govuk-tabs__list-item--selected{% endif %}"
      >
        <a
          class="govuk-tabs__tab"
          role="tab"
          style="text-decoration: underline"
          id="tab-{{ tab.id }}"
          href="{{ tab.url }}"
          >{{ tab.title | safe }}</a
        >
      </li>
      {% endfor %}
    </ul>
  </nav>
</div>
{% endmacro %}
