{% if cookieBannerEnabled %}
    {% from "govuk/components/cookie-banner/macro.njk" import govukCookieBanner %}

    {% set html %}
      <p class="govuk-body">We use some essential cookies to make this service work.</p>
      <p class="govuk-body">We’d also like to use analytics cookies so we can understand how you use the service and make improvements.</p>
    {% endset %}

    {% set acceptHtml %}
      <p class="govuk-body">You’ve accepted analytics cookies. You can <a class="govuk-link" href="/cookies">change your cookie settings</a> at any time.</p>
    {% endset %}

    {% set rejectHtml %}
      <p class="govuk-body">You’ve rejected analytics cookies. You can <a class="govuk-link" href="/cookies">change your cookie settings</a> at any time.</p>
    {% endset %}

    {{ govukCookieBanner({
      classes: 'cookie-banner',
      ariaLabel: "Cookies on Manage Your Appeal",
      hidden: true,
      messages: [
        {
          classes: 'cookie-banner-message',
          headingText: "Cookies on Manage Your Appeal",
          html: html,
          actions: [
            {
              classes: 'cookie-banner-accept-button',
              text: "Accept analytics cookies",
              type: "button"
            },
            {
              classes: 'cookie-banner-reject-button',
              text: "Reject analytics cookies",
              type: "button"
            },
            {
              text: "View cookies",
              href: "#"
            }
          ]
        },
        {
          classes: 'cookie-banner-accept-message',
          html: acceptHtml,
          role: "alert",
          hidden: true,
          actions: [
            {
              classes: 'cookie-banner-hide-button',
              text: "Hide this message"
            }
          ]
        },
        {
          classes: 'cookie-banner-reject-message',
          html: rejectHtml,
          role: "alert",
          hidden: true,
          actions: [
            {
              classes: 'cookie-banner-hide-button',
              text: "Hide this message"
            }
          ]
        }
      ]
    }) }}
{% else %}
<div id="app-cookie-banner">
  <p class="app-cookie-banner__message">
    {{ content[i18n.language].cookieBanner.message | safe }}
      <a href="/cookie-policy" class="govuk-link">{{ content[i18n.language].cookieBanner.link | safe }}</a>
  </p>
</div>
{% endif %}
