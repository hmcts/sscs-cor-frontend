{% from "button/macro.njk" import govukButton %} {% from "file-upload/macro.njk"
import govukFileUpload %} {% from "textarea/macro.njk" import govukTextarea %}
{% from "components/spinner.njk" import spinner %}

<div class="govuk-grid-column-full">
  <h1 class="govuk-heading-l question-header">
    {{ content[i18n.language].additionalEvidence.evidenceUploadAudioVideo.header
    | safe }}
  </h1>
  <p>
    {{
    content[i18n.language].additionalEvidence.evidenceUploadAudioVideo.description.para1
    | safe }}
  </p>

  <p>
    {{
    content[i18n.language].additionalEvidence.evidenceUploadAudioVideo.description.para2
    | eval | safe }}.
  </p>
  <form
    class="--padding-top-m"
    id="additional-evidence-audio-video-form"
    name="additional-evidence-audio-video-form"
    action="/additional-evidence/uploadAudioVideo?_csrf={{csrfToken}}"
    method="POST"
    enctype="multipart/form-data"
  >
    {{ govukTextarea({ id: "additional-evidence-description", name:
    "additional-evidence-description", value: description, label: { text:
    content[i18n.language].common.describeTheEvidence | safe, classes:
    "--font-weight-b --margin-none" }, hint: { text:
    content[i18n.language].common.breflyDescribeWhatAndWhy | safe },
    errorMessage: { text: error } if error }) }}

    <p>
      {{
      content[i18n.language].additionalEvidence.evidenceUploadAudioVideo.description.para3
      | eval | safe }}.
    </p>

    <p>
      {{
      content[i18n.language].additionalEvidence.evidenceUploadAudioVideo.description.para4
      | eval | safe }}.
    </p>

    {% if hasAudioVideoFile %}
    <p>
      {{
      content[i18n.language].additionalEvidence.evidenceUploadAudioVideo.description.contentWarningPara1
      | eval | safe }}
    </p>
    {% endif %}

    <!--        https://design-system.service.gov.uk/components/file-upload/-->
    {{ govukFileUpload({ id: "additional-evidence-audio-video-file", name:
    "additional-evidence-audio-video-file", classes: "file-display-none", label:
    { text:
    content[i18n.language].additionalEvidence.evidenceUploadAudioVideo.label,
    classes: "govuk-button secondary-button element--inline-block", id:
    "additional-evidence-file-label" }, attributes: { accept:
    fileTypAudioVideoWhiteList }, "errorMessage": { "text": fileUploadError } if
    fileUploadError }) }}

    <p class="govuk-table__header">
      {{
      content[i18n.language].additionalEvidence.evidenceUpload.fileList.uploadedFiles
      | safe }}
    </p>
    <p id="selected-evidence-file"></p>
    <p id="no-evidence-file">
      {{
      content[i18n.language].additionalEvidence.evidenceUpload.fileList.noFilesUploaded
      | safe }}
    </p>

    <div id="submit-buttons">
      {{ spinner(content[i18n.language].additionalEvidence.loading | safe) }}
      <input
        id="submit-evidences"
        type="submit"
        name="buttonSubmit"
        value="{{ content[i18n.language].common.submitEvidenceToTribunal | safe }}"
        class="govuk-button"
      />
    </div>
  </form>
</div>
